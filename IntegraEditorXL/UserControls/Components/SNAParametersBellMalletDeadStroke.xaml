<UserControl x:Class="IntegraEditorXL.UserControls.Components.SNAParametersBellMalletDeadStroke"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegraEditorXL.UserControls.Components"
             xmlns:models="clr-namespace:IntegraXL.Models.Parameters;assembly=IntegraXL"
             xmlns:xl="clr-namespace:ControlsXL;assembly=ControlsXL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White"
             d:DataContext="{d:DesignInstance Type=models:SNABellMalletDeadStroke}">

    <StackPanel DataContext="{Binding Parameters}">

        <xl:SpinText Min="-64" Max="63"
                     Prefix="Mallet Hardness (CC16)"
                     ShowPositiveSign="True"
                     Value="{Binding Hardness}"/>

        <xl:SpinText Min="-64" Max="63"
                     Prefix="Roll Speed (CC17)"
                     ShowPositiveSign="True"
                     Value="{Binding RollSpeed}"/>

        <xl:EnumeratedText Prefix="Variation"
                           Value="{Binding Variation}"/>
    </StackPanel>
</UserControl>
