                                   Suffix="MSec"
                                   Value="{Binding Comp1ReleaseTime}"/>

                <xl:SpinText Min="0" Max="127"
                             Prefix="Threshold"
                             Value="{Binding Comp1Threshold}"/>

                <xl:EnumeratedText HorizontalContentAlignment="Right" 
                                   Prefix="Ratio"
                                   Value="{Binding Comp1Ratio}"/>

                <xl:SpinText Min="0" Max="24"
                             Prefix="Ouput Gain"
                             ShowPositiveSign="True"
                             Suffix="dB"
                             Value="{Binding Comp1OutputGain}"/>

