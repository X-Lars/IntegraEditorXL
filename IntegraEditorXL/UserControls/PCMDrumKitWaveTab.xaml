        <!--PARTIAL 4-->
        <GroupBox Grid.Column="1" Grid.Row="3"
                  DataContext="{Binding Partial}"
                  d:DataContext="{d:DesignInstance Type=models:PCMDrumKitPartial}"
                  Width="420">

            <GroupBox.Header>
