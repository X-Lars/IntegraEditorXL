                                         Value="{Binding WMT2VelocityFadeLower}"/>

                        <i:KeyFadeSlider Grid.Column="1" Grid.Row="3"
                                         Min="127" Max="0"
                                         Value="{Binding WMT2VelocityFadeUpper}"/>
                    </Grid>

                </GroupBox>
            </Grid>

        </GroupBox>

        <!--PARTIAL 3-->
        <GroupBox Grid.Column="0" Grid.Row="3"
