                    <StackPanel Grid.Column="0" Grid.Row="2">

                        <xl:SpinText Min="0" Max="127"
                                     Prefix="Level"
                                     Value="{Binding WMT4Level}"/>

                        <xl:ListText ItemsSource="{Binding PanValues}"
                                     Prefix="Pan"
                                     SelectedIndex="{Binding WMT4Pan}"/>

                        <xl:SpinText Interval="6"
                                     Min="-6" Max="12"
